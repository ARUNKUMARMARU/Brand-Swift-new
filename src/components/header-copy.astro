  function toggleMenu() {
    var menuIcon = document.querySelector(".menu-icon");
    var additionalContent = document.getElementById("additionalContent");
    var head = document.getElementById("header");

    menuIcon.classList.toggle("open");
    additionalContent.classList.toggle("visible");
    head.classList.toggle("white");
       
  }
</script>

<style lang="scss">
  .header-container {    
    background-color: #ffffff;
   }

  header {
    padding: 1.5rem 2rem;
    z-index: 999;
    position: fixed !important;
    top: 0;
    left: 0;
    width: 100%;
    height: 12vh;
    display: flex;
    align-items: center; 
    justify-content: space-between; 
    transition: top 0.3s ease;

    &.hide {
      top: -130px;
    }

    .logo {   
     
      img {
        width: 13vw;
        padding-left: 0;
      }
    }
    .menu-list {
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    background-color: #09182d;   
    
    border-radius: 25px;
    margin-right: 20vw;
}














    .menu-icon {
      display: flex;
      flex-direction: column;
      justify-content: center; 
      cursor: pointer;
      margin-right: 0;
    }

    .menu-bar {
      width: 40px;
      height: 3px;
      background-color: #09182d;
      margin: 3px 0;
      transition: 0.4s;
    }

    .menu-icon.open .menu-bar:nth-child(1) {
      transform: rotate(-45deg) translate(-7px, 8px);
      background-color: rgb(38, 0, 255);
    }

    .menu-icon.open .menu-bar:nth-child(2) {
      opacity: 0;
    }

    .menu-icon.open .menu-bar:nth-child(3) {
      transform: rotate(45deg) translate(-5px, -6px);
    }

    .additional-content {
      display: none;
      position: fixed;
      width: 100%;
      transition: var(--transition);
      top: var(--header-height);
      left: 0;
      height: 100vh;
      transform: all 0.5s ease;

      svg {
        position: absolute;
        top: 0;
        left: 0;
        width: 200px !important;
      }
    }

    .additional-content.visible {
      display: block !important;
      background-color: white;
      position: fixed;
      overflow-y: auto;
    }

    .menu-overlay {
      padding-top: 5vh;
      height: 600px;
      color: black;
      z-index: 9999;
      display: flex;
      

      .menu-item {
        font-size: 3vw; // Use viewport width for responsiveness
        text-transform: uppercase;
        font-weight: 300;
        transition: all 0.8s ease-in-out;

        &:hover {
          background: -webkit-linear-gradient(#09182d, #3272f6);
          -webkit-background-clip: text;
          -webkit-text-fill-color: transparent;
          transition: all 0.3s ease-in-out;
          padding-left: 10px;
         
        }
      }

      .menu-wrapper {
        display: flex;
        flex-direction: column;
        gap: 2rem;
      }

      isolation: isolate;

      &:before {
        background: -webkit-linear-gradient(#09182d, #3272f6);
        content: "";
        width: 599px;
        height: 600px;
        position: absolute;
        bottom: -120px;
        right: -160px;
        border-radius: 50%;
        filter: blur(80px);
        z-index: 9;

        @keyframes move {
          0% {
            transform: scale(1) translate(10px, -30px);
          }
          38% {
            transform: scale(0.8, 1) translate(5vw, 30vh) rotate(160deg);
          }
          100% {
            transform: scale(1) translate(10px, -90px);
          }
        }

        @media screen and (max-width: 900px) {
          width: 300px;
          height: 300px;
        }
      }
    }

    .white {
      background-color: #ffffff;
    }

    @media screen and (max-width: 1200px) {
      header {
        padding: 1rem 3rem;
      }

      .logo img {
        width: 12vw;
      }

      .menu-item {
        font-size: 2.5vw;
      }
    }

    @media screen and (max-width: 992px) {
      header {
        padding: 1rem 2rem;
        height: auto;

        .logo img {
          width: 150px;
        }
      }

      .menu-item {
        font-size: 2vw;
      }
    }

    @media screen and (max-width: 768px) {
        .logo img {
          width: 20vw;
        }
      .menu-item {
        font-size: 2vw;
      }
     
      .menu-bar {
      width: 35px;
      height: 2.1px;    
      
    }
    }

    @media screen and (max-width: 480px) {
        .logo img {
          width: 28vw;
        }     

      .menu-item {
        font-size: 4vw !important;
        font-weight: 400 !important;
      }
      .menu-bar {
      width: 30px;
      height: 2px;    
      
    }
    }

    @media screen and (max-width: 390px) {
      
      .logo img {
          width: 25vw;
      }
      .menu-item {
        font-size: 1.2vw;
      }
      .menu-overlay{
        padding-top: 0;
      }
      .menu-bar {
      width: 25px;
      height: 1.5px;    
      
    }
    }
  }
</style>



