---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
import Footer from '../components/footer3.astro';
---

<Layout
  title="Contact Us | BrandSwift - Get in Touch with the Best Digital Marketing Agency in Bangalore"
  description="Reach out to BrandSwift, Bangalore's top digital marketing agency. Contact us for expert branding, SEO, web development, and marketing solutions tailored to your business"
  keywords="Contact BrandSwift, Digital Marketing Agency Bangalore, Branding Agency Bangalore Contact, SEO Services Contact Bangalore, Web Development Contact Bangalore, Marketing Solutions Contact"
  robots="index, follow"
  canonical="https://brandswift.in/contact/"
  og_title="Contact Us | BrandSwift - Get in Touch with the Best Digital Marketing Agency in Bangalore"
  og_description="Contact BrandSwift for innovative digital marketing solutions. Let us help your brand succeed with expert branding, SEO, and social media strategies"
  og_image=""
  twitter_card="summary_large_image"
  twitter_title="Contact Us | BrandSwift - Get in Touch with the Best Digital Marketing Agency in Bangalore"
  twitter_description="Talk to BrandSwift today for professional branding, SEO, and marketing solutions. Contact Bangalore's trusted digital marketing experts"
  twitter_image=""
>
  <Header />
  <div class="blur-wrapper">
    <div class="contact-title">Let's Connect and Collaborate!</div>
    <p class="contact-paragraph">
      Partner with us for marketing that breaks through the noise.
    </p>
    <div class="performancetop">
      <div class="performance">
        <div class="input">
          <form method="post" enctype="multipart/form-data" id="contact-form">
            <input
              type="text"
              id="name"
              name="name"
              required
              placeholder="Your Name"
            />
            <input
              type="tel"
              id="number"
              name="number"
              required
              placeholder="Your Phone Number"
            />
            <input
              type="email"
              id="email"
              name="email"
              required
              placeholder="Your Email"
            />
            <select id="service" name="service">
              <option>Select a service</option>
              <option value="SEO">SEO</option>
              <option value="Digital Marketing">Digital Marketing</option>
              <option value="Web Design">Web Design</option>
              <option value="Web Development">Web Development</option>
              <option value="Social Media Management"
                >Social Media Management</option
              >
              <option value="Graphic Design">Graphic Design</option>
            </select>
            <textarea
              id="message"
              name="message"
              rows="4"
              placeholder="Your Message"></textarea>
            <div class="submit">
              <button class="btn" value="Submit">Submit</button>
            </div>
          </form>
        </div>
        <div>
          <img src="/images/contact-candid.webp" />
        </div>
      </div>
    </div>
    <Footer />
  </div>
</Layout>

