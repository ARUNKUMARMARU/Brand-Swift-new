<script type="text/javascript">
  document
    .getElementById('contact-form')
    .addEventListener('submit', function (event) {
      event.preventDefault();

      const submitButton = event.target.querySelector('button');
      submitButton.classList.add('button-loading');
      submitButton.innerText = 'Loading...';

      const formData = new FormData(event.target);
      const data = Object.fromEntries(formData.entries());
      var templateParams = {
        firstname: data.firstname,
        lastname: data.lastname,
        email: data.email,
        phonenumber: data.phonenumber,
        message: data.message,
      };

      emailjs
        .send('service_8tpviia', 'template_s2yajum', templateParams)
        .then(function (response) {
          window.alert(
            'Thank you for your interest! We will reach out to you soon.'
          );

          event.target.reset();
          submitButton.classList.remove('button-loading');
          submitButton.innerText = 'Submit';
        })
        .catch(function (error) {
          console.error('EmailJS Error:', error);
          window.alert('Oops! Something went wrong.');

          submitButton.classList.remove('button-loading');
          submitButton.innerText = 'Submit';
        });
    });
</script>
<style lang="scss">
  .contact-title {
    padding-top: 20vh;
    font-size: 5vw;
    font-weight: 400;
    padding-left: 7vw;
  }

  .contact-paragraph {
    padding-left: 7vw;
  }

  .performance {
    background-image: linear-gradient(to bottom right, #87adf9, #f7ecdb);
    width: 100%;
    height: 100%;
    padding-top: 10vh;
    border-radius: 5vh;
    display: flex;
    align-items: flex-start;
    padding-left: 7vw;
  }
  .performance img {
    max-width: 100vw;
    border-radius: 5vh;
  }

  .performancetop {
    padding-top: 20vh;
    display: flex;
    flex-direction: row;
  }

  .input {
    display: flex;
    flex-direction: column;
    width: 50vw;
  }

  .input input,
  .input select,
  .input textarea,
  .input .submit {
    margin-bottom: 1em;
    padding: 0.5em;
    font-size: 1em;
    width: 70%;
  }

  form {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    gap: 10px;
    row-gap: 40px;
    margin: 0 auto;
  }

  .btn {
    margin-bottom: 1em;
    font-size: 1em;
    width: 30%;
    background-color: #3272f6;
    color: white;
    border-radius: 15px;
  }

  textarea,
  input[type='text'],
  input[type='tel'],
  input[type='email'],
  select {
    width: 370px;
    border: none;
    padding: 17px;
    outline: none;
    border-radius: 25px;
  }
  @media screen and (max-width: 1440px) {
    textarea,
    input[type='text'],
    input[type='tel'],
    input[type='email'],
    select {
      width: 320px;
    }
  }

  @media screen and (max-width: 1280px) {
    textarea,
    input[type='text'],
    input[type='tel'],
    input[type='email'],
    select {
      width: auto;
    }
  }

  @media screen and (max-width: 992px) {
    .contact-title {
      font-size: 4vw;
      padding-left: 5vw;
    }

    .contact-paragraph {
      padding-left: 5vw;
    }

    .performancetop {
      padding-top: 15vh;
      flex-direction: column;
      align-items: center;
    }

    .performance {
      padding-left: 5vw;
    }

    .input {
      align-items: center;
    }

    textarea,
    input[type='text'],
    input[type='tel'],
    input[type='email'],
    select {
      width: 280px;
    }
  }

  @media screen and (max-width: 768px) {
    .contact-title {
      font-size: 6vw;
      padding-left: 3vw;
    }

    .contact-paragraph {
      padding-left: 3vw;
    }

    .performance {
      padding-left: 3vw;
    }

    textarea,
    input[type='text'],
    input[type='tel'],
    input[type='email'],
    select {
      width: 240px;
    }

    .btn {
      width: 50%;
    }
  }

  @media screen and (max-width: 480px) {
    .contact-title {
      font-size: 8vw;
      padding-left: 2vw;
    }

    .contact-paragraph {
      padding-left: 2vw;
    }

    .performance {
      padding-left: 2vw;
    }
    .performance img {
      display: none;
    }
    .btn {
      width: 60%;
    }
    .input {
      padding-left: 10vw;

      width: 100vw;
    }

    .input input,
    .input select,
    .input textarea,
    .input .submit {
      font-size: 0.8rem;
      width: 80%;
    }
  }

  @media screen and (max-width: 390px) {
    .contact-title {
      font-size: 10vw;
      padding-left: 1vw;
    }

    .contact-paragraph {
      padding-left: 1vw;
    }

    .performance {
      padding-left: 1vw;
    }

    textarea,
    input[type='text'],
    input[type='tel'],
    input[type='email'],
    select {
      width: 180px;
    }

    .btn {
      width: 70%;
    }
  }
</style>
