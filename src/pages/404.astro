---
// src/pages/404.astro
export const prerender = true;
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Page Not Found</title>
    <style>
      body {
        color: white;
        font-family: Arial, sans-serif;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        background-color: #5f90f3;
        overflow: hidden;
      }
      .container {
        text-align: center;
        animation: fadeInUp 1.5s ease-in-out;
      }
      h1 {
        font-size: 5rem;
        margin: 0;
      }
      p {
        font-size: 1.5rem;
        margin: 10px 0;
      }
      a {
        color: white;
       
        font-size: 1.2rem;
        display: inline-block;
        margin-top: 20px;
        animation: pulse 1s infinite;
      }
      @keyframes fadeInUp {
        0% {
          opacity: 0;
          transform: translateY(20px);
        }
        100% {
          opacity: 1;
          transform: translateY(0);
        }
      }
      @keyframes pulse {
        0%, 100% {
          transform: scale(1);
        }
        50% {
          transform: scale(1.05);
        }
      }
    </style>
  </head>
  <body>
    <div class="container">
      <h1>404</h1>
      <p>Sorry, the page you're looking for doesn't exist.</p>
      <a href="/">Go back to Home</a>
    </div>
  </body>
</html>
