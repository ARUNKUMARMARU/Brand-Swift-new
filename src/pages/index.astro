  .home-mission-content {
    font-family: 'Cotterway Pro Regular', Sans-serif;
    opacity: 0.7;
    font-size: 1.4vw;
    font-weight: 400;
  }

  .home-section {
    height: 40vh;
    margin-top: var(--header-height);
    display: flex;
    flex-direction: column;
    gap: 1rem;
    line-height: 3vw;
    padding-left: 1.5vw;

    h3 {
      font-size: 1.25vw;
    }

    .home-banner-title {
      font-size: 2.5vw;
      line-height: 4vw;
      font-weight: 600;
    }

    > :nth-child(2) {
      display: flex;
      gap: 2rem;
    }
  }
  .about-bs {
    background-color: #e1ebff;
    margin: 10vw 2vw;
    padding: 2vw;
    border-radius: 25px;
    line-height: 2.5vw;
    font-size: 18px;
  }
  .about-bs h2 {
    color: #3272f6;
    padding: 2vw;
  }
  .about-bs .col-lg-3 {
    display: flex;
    margin-left: 40vw;
  }
  @media screen and (max-width: 768px) {
    .about-bs {
      line-height: 6vw;
      font-size: 18px;
      font-weight: 400;
    }
    .about-bs .col-lg-3 {
      display: flex;
      margin-left: 30vw;
    }
  }
  @media screen and (max-width: 480px) {
    .about-bs {
      line-height: 7.5vw;
      font-size: 16px;
      font-weight: 400;
    }
    .about-bs .col-lg-3 {
      display: flex;
      margin-left: 30vw;
    }
  }
  .responsive-image-wrapper {
    display: flex;
    justify-content: center;
    width: 50%;
    overflow: hidden;
  }

  .responsive-image-wrapper img {
    width: 60%;
    max-height: 25vw;
  }

  .intro-slider {
    padding-top: 10vw;
    width: 50%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .slider {
    display: flex;
    width: 100%;
    animation: slide 10s infinite;
  }

  .slides {
    display: flex;
  }

  .slide {
    width: 100%;
    flex-shrink: 0;
  }

  .slide img {
    width: 80%;
    display: block;
  }

  @keyframes slide {
    0%,
    20% {
      transform: translateX(0%);
    }
    25%,
    45% {
      transform: translateX(-100%);
    }
    50%,
    70% {
      transform: translateX(-200%);
    }
    75%,
    100% {
      transform: translateX(-300%);
    }
  }

  .growth {
    padding-top: 7vw;
  }

  .highlights .row {
    justify-content: center;
    gap: 3rem;
  }

  .highlights .col-lg-3 > :nth-child(1) {
    border: 1.5px solid #3272f6;
    border-radius: 20px;
    padding: 3rem 0;
  }

  @media screen and (max-width: 768px) {
    .home-section {
      height: 60vh;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      gap: 4rem;
    }

    .home-about-content {
      font-size: 3vw;
    }

    .home-mission {
      width: 60vw;
    }

    .home-mission-title {
      font-size: 2vw;
    }

    .home-mission-content {
      font-size: 1.8vw;
    }

    .home-section h3 {
      font-size: 4vh;
    }

    .brands {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 480px) {
    .responsive-image-wrapper {
      display: none;
    }

    .growth {
      padding-top: 5vw;
    }

    .home-section {
      height: 50vh;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      gap: 0rem;
    }

    .home-section > :nth-child(2) {
      gap: 1rem;
    }

    .home-banner-title {
      font-size: 5vw;
      line-height: 8vw;
      padding-left: 15px;
    }

    .button {
      display: flex;
      margin-left: 0;
    }

    h3 {
      padding-left: 15px;
    }

    .home-about-content {
      font-size: 4vw;
    }

    .home-mission {
      width: 80vw;
    }

    .home-mission-title {
      font-size: 3vw;
    }

    .home-mission-content {
      font-size: 2.5vw;
    }

    .brands {
      grid-template-columns: 1fr;
    }

    .text-start {
      width: 100%;
    }
  }
  .hover-container-all {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    gap: 5vw;
    justify-content: center;
  }
  .hover-container {
    width: 25vw;
    height: 35vh;
    position: relative;
    overflow: hidden;
    border-radius: 20px 20px 0px 0px;

    background: linear-gradient(90deg, #09182d 0%, #183863 50%, #3272f6 100%);
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
  }

  .hover-container .inner-container {
    width: 100%;
    height: 100%;
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    border-radius: 13px; /* Adjusted to fit inside the parent */
  }

  .image {
    width: 100%;
    height: 100%;
    background-size: cover;
    transition: opacity 0.5s ease-in-out;
  }

