---
import Layout from '../layouts/Layout.astro';
import Header from '../components/header.astro';
import Footer from '../components/footer3.astro';
import Section from '../components/Section.astro';
---

<Layout
  title=""
  description=""
  keywords=""
  robots=""
  canonical=""
  og_title=""
  og_description=""
  og_image=""
  twitter_card=""
  twitter_title=""
  twitter_description=""
  twitter_image=""
>
  <Header />
  <div class="blur-wrapper">
    <Section>
      <div class="pagetop">
        <div class="port-title">
          <p>OUR PORTFOLIO</p>
          <h5>
            Establishing brand identity & presence through responsive &
            interactive design
          </h5>
        </div>

        <div class="portfolio-container">
          <div>
            <div class="portfolio-list">
              <img src="/images/port-logo-mock.webp" alt="logo" />
            </div>
            <div><h4>Infinity Plus</h4></div>
          </div>

          <div>
            <div class="portfolio-list">
              <img src="/images/port-logo-mock.webp" alt="logo" />
            </div>
            <div><h4>Infinity Plus</h4></div>
          </div>

          <div>
            <div class="portfolio-list">
              <img src="/images/port-logo-mock.webp" alt="logo" />
            </div>
            <div><h4>Infinity Plus</h4></div>
          </div>

          <div>
            <div class="portfolio-list">
              <img src="/images/port-visitingcard-mock.webp" alt="logo2" />
            </div>
            <div><h4>Visiting Card</h4></div>
          </div>

          <div>
            <div class="portfolio-list">
              <img src="/images/port-visitingcard-mock.webp" alt="logo5" />
            </div>
            <div><h4>Visiting Card</h4></div>
          </div>
        </div>
      </div>
    </Section>
    <Footer />
  </div>
</Layout>

<style lang="scss">
  .pagetop {
    padding-top: 10vh;
  }
  .port-title {
    text-align: center;
  }
  .port-title p {
    font-size: 5vw;
    font-weight: 1vw;
    font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS',
      sans-serif;
  }
  .portfolio-container {
    width: 100%;
    height: auto;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
    row-gap: 5vw;
    padding-top: 25vh;
  }
  .portfolio-list {
    display: flex;
    width: 25vw;
    background-color: #ede0d4;
    height: 25vw;
    border-radius: 40px;
    align-items: center;
    justify-content: center;
  }
  .portfolio-list img {
    width: 90%;
    transition: width 1s;
  }
  .portfolio-container h4 {
    text-align: center;
  }
  .portfolio-list img:hover {
    width: 95%;
    transition: 1s;
  }
  @media screen and (max-width: 480px) {
    .portfolio-container {
      padding-left: 15vw;
      flex-direction: column;
      row-gap: 5vw;
      padding-top: 10vh;
    }
    .portfolio-list {
      width: 80%;

      height: 80vw;
      border-radius: 35px;
    }
    .portfolio-list img {
      width: 80%;
      transition: width 1s;
    }
    .portfolio-container h4 {
      text-align: start;
      padding-left: 20 vw;
    }
  }
</style>
